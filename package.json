{
	"devDependencies": {
		"prettier": "^3.2.5",
		"prettier-plugin-solidity": "^1.3.1"
	},
	"scripts": {
		"codegen": "pnpm run forge:build && pnpm run archetype:codegen && pnpm run game:abigen && pnpm run factory:abigen",
		"forge:build": "forge build --extra-output-files bin abi",
		"archetype:codegen": "archetype codegen",
		"game:abigen": "abigen --bin ./out/Game.sol/Game.bin --abi ./out/Game.sol/Game.abi.json --pkg contract --out ./gogen/abigen/game/game.go",
		"factory:abigen": "abigen --bin ./out/GameFactory.sol/GameFactory.bin --abi ./out/GameFactory.sol/GameFactory.abi.json --pkg contract --out ./gogen/abigen/game_factory/game_factory.go",
		"game:run": "go run cmd/main.go",
		"game:build:web": "env GOOS=js GOARCH=wasm go build -trimpath -o ./web/static/play.wasm ./web/cmd/app",
		"game:run:web": "go run ./web/cmd/server ./web/templates ./web/static",
		"engine:build": "go build -o ./bin/geth ./engine/cmd/geth.go"
	}
}